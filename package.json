{
  "name": "branchnamer",
  "displayName": "branchnamer",
  "description": "Help identify branc names in VS status bar",
  "version": "0.0.2",
  "publisher": "Lordkaito",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lordkaito/branchnamer"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWorkspaceContains:**/*.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "branchnamer.refresh",
        "title": "Branchnamer: refresh"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "branchnamer Configuration",
      "properties": {
        "branchnamer.defaultFileName": {
          "type": "string",
          "default": true,
          "description": "Set the default configuration file name for branchnamer."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.2",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.28.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "prettier": "^3.5.3",
    "vsce": "^2.15.0"
  }
}
